@using BEANlayer
@model LoginBEAN
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        body {
            background-color: black;
            font-size: large;
            font-weight: 900;
            font-family: 'Times New Roman', Times, serif ;
        }
        section {
            background-image: url(../../Images/ScreenShot21May14.png);
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center center;
            height: 550px;

            /*      padding: 1px 1px 1px 1px; /* top right botton left*/ */
        }
        container {
            padding: 0 10px;
            margin: 0 auto;
        }
        label {
            width: 120px;
            display: inline-block;  
            color: greenyellow;
            padding-left: 600px;
            font-size: 18px;
            font-weight:900;
        }
        strong {
            width: 120px;
            display: inline-block;
            color: red;
            padding-left: 600px;
            font-size: 18px;
            font-weight: 900;
        }

        .form-button {
            padding-left: 600px;
        }
        h1 {
            margin: 0px;
            color: blue;
            text-align: center;
            font-size: 60px;        
        }
        header span {
            color: forestgreen;
        }
        container a {
            color: whitesmoke;
            padding-left: 600px;
            text-decoration:none;
        }
        div div {
            color: gray;
        }

    </style>
</head>
<body>
    @using (Html.BeginForm())

    {
        @Html.AntiForgeryToken()
        <header>
            <h1> <span>Portfolio</span> Tool</h1>`
        </header>
        <main>
            <section>
                <container>
                    <br />
                    <br />
                    @Html.ActionLink("New Users", "Create", "LoginUsers")

                    <div class="form-horizontal">

                        <div class="form-group">
                            @Html.LabelFor(model => model.userID, "User ID", htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.userID, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.userPassword, "Password", htmlAttributes: new { @class = "control-label" })
                            @Html.PasswordFor(model => model.userPassword, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-button ">
                        <input type="submit" value="Submit" class="btn btn-success" />
                    </div>
                    testPostBack
                    <input type="hidden" id="testPostBack" name="testPostBack" value="" />
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div>
                            <div>
                                <strong>Attention: </strong> @ViewBag.Message
                            </div>
                        </div>
                    }
                </container>
            </section>
        </main>
        <footer>
        </footer>
    }
</body>
</html>
